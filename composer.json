{
    "name": "baruica/xml",
    "description": "Simple library providing an easy API for reading XML.",
    "type": "library",
    "keywords": ["xml"],
    "homepage": "https://github.com/baruica/xml",
    "license": "MIT",
    "authors": [
        {
            "name": "Nelson da Costa",
            "homepage": "https://twitter.com/baruica"
        }
    ],
    "autoload": {
        "psr-4": {
            "Baruica\\Xml\\": "src/Baruica/Xml/"
        },
        "exclude-from-classmap": [
            "**/spec/*",
            "**Spec.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Baruica\\Xml\\": "spec/Baruica/Xml/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpspec/phpspec": "^6.1"
    }
}
