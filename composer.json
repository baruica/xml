{
    "name": "baruica/xml",
    "description": "Simple library providing an easy API for reading XML.",
    "type": "library",
    "keywords": ["xml"],
    "homepage": "https://github.com/baruica/xml",
    "license": "MIT",
    "authors": [
        {
            "name": "Nelson da Costa",
            "email": "barui.ca@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "Baruica\\Xml\\": "src" },
        "exclude-from-classmap": ["tests"]
